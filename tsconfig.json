{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "dist",
    "sourceMap": false,
    "target": "es2016",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "allowSyntheticDefaultImports": true,
    "rootDir": ".",
    "skipLibCheck": true,
    "types": [
      "@types/node",
      "vitest/globals",
    ],
    "paths": {}
  },
  "include": [
    "./**/*.ts",
    "./**/*.d.ts",
  ]
}
